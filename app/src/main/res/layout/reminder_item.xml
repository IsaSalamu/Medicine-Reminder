<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:layout_weight="100"
    android:background="#F1F7F6"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/alarm_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_baseline_alarm_24"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:id="@+id/descri_holder"
        android:layout_toRightOf="@+id/alarm_image"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alarm_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginLeft="16dp"
            android:text="Alarm description" />

        <TextView
            android:id="@+id/alarm_repeating_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textStyle="normal"
            android:textSize="19sp"
            android:layout_marginLeft="16dp"
            android:text="Repeat" />

    </LinearLayout>

</RelativeLayout>